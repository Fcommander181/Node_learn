<%- include("./partials/head.ejs")%>
<body> 
    <!-- when we use = sign in ejs that will escape special caracters that will end up with string value  instead of raw html so we should use - sign instead -->
    <!-- to import partials :  -->
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if(blogs.length > 0 ) {%>
        <% blogs.forEach(blog => {%>
            <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            </a>
        <% }) %>    
        <% }else { %>    
            <p>There is no blogs to display ...</p>
            <% }%>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>